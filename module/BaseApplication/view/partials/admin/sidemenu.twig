    <section class="sidebar">
        <div class="user-panel">
            <div class="pull-left image">
                <img src="/files/avatar/{{ userIdentity().id }}/{{ userIdentity().avatar }}" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>{{ userIdentity().name | split(' ')[0] }}</p>
                <a href="{{ url('admin-logout') }}">{{ translate('Sign out') }}</a>
            </div>
        </div>
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">{{ translate('MAIN NAVIGATION') }}</li>
            <li class="active">
                <a href="{{ url('admin') }}">
                    <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                </a>
            </li>
            {% include 'partials/admin/custom-menu.twig' ignore missing %}
            <li>
                <a href="{{ url('admin-user') }}">
                    <i class="fa fa-user"></i> <span>{{ 'System Users' }}</span>
                </a>
            </li>
        </ul>
    </section>
